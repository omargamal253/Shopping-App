<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"

    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@drawable/bg_progress"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ri_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Order Successful"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you can track the delivery in the order section"
            android:textSize="16dp"
            android:maxWidth="250dp"
            android:layout_margin="10dp"

            />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbtn_bg"
            android:textColor="#fff"
            android:text="Continue Shopping"
            android:id="@+id/OkProgress"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to orders"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:id="@+id/goToOrders"

            />


    </LinearLayout>
</RelativeLayout>