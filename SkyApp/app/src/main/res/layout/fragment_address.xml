<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.skyapp.CheckoutFragments.AddressFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="150dp"
        android:background="#eee"
        android:orientation="vertical"
>



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#CCFFFF"
    android:id="@+id/AddressRelative"
    android:padding="5dp"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address Details"
        android:textSize="14dp"
        android:layout_centerVertical="true"
        android:textColor="#000"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Required"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        />

</RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_below="@+id/AddressRelative"
            android:layout_margin="5dp"
            android:id="@+id/AddressEditText"
            android:background="@drawable/login_bg"
            >



        <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/FirstNameLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/HintAddressText"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/blueWhite"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/FirstName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="First name*"
            android:inputType="text"
            android:paddingStart="10dp"

            android:textSize="15dp"


            />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LastNameLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/HintAddressText"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/blueWhite"
        android:layout_toEndOf="@+id/FirstNameLayout"
        android:layout_marginLeft="10dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/LastName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Last name*"
            android:inputType="text"
            android:paddingStart="10dp"

            android:textSize="15dp"

            />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/CountryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/HintAddressText"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/blueWhite"
        android:layout_below="@+id/FirstNameLayout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Country"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Egypt"

            android:enabled="false"
            android:inputType="text"
            android:paddingStart="10dp"

            android:textSize="15dp"

            >

        </com.google.android.material.textfield.TextInputEditText>




    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/HintAddressText"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/blueWhite"
        android:layout_below="@+id/CountryLayout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="City*"
            android:inputType="text"
            android:paddingStart="10dp"

            android:textSize="15dp"

            />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/streetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/HintAddressText"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/blueWhite"
        android:layout_below="@+id/cityLayout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/street"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Street name*"
            android:inputType="text"
            android:paddingStart="10dp"

           android:textSize="15dp"

            />
    </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/buildingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintAddressText"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/blueWhite"
                android:layout_below="@+id/streetLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/building"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Building number"
                    android:inputType="text"
                    android:paddingStart="10dp"

                    android:textSize="15dp"

                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+20"
                android:layout_below="@+id/buildingLayout"
                android:textSize="17dp"
                android:textColor="#000"
                android:layout_marginTop="17dp"
                android:id="@+id/Text20"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                />



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/PhoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintAddressText"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/blueWhite"
                android:layout_below="@+id/buildingLayout"
                android:layout_toRightOf="@+id/Text20"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Mobile phone number"
                    android:inputType="phone"
                    android:paddingStart="10dp"

                    android:textSize="15dp"

                    />
            </com.google.android.material.textfield.TextInputLayout>



        </RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/R_PROCEED_TO_PAYMENT"
    android:layout_below="@+id/AddressEditText"
    android:background="#fff"
    android:padding="10dp"
    android:orientation="vertical"


    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SubTotal"
        android:textColor="#000"
        android:id="@+id/subTotalText"
        android:textSize="17dp"
android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="4,453 EGP"
        android:textColor="#000"
        android:textSize="17dp"
        android:id="@+id/subTotal"
android:layout_marginRight="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipping"
        android:textColor="#000"
        android:id="@+id/ShippingText"
        android:textSize="17dp"
        android:layout_below="@+id/subTotalText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="199 EGP"
        android:textColor="@color/MainColor"
        android:textSize="17dp"
        android:id="@+id/Shipping"
        android:layout_below="@+id/subTotalText"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"


        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#404040"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/line_"
        android:layout_below="@+id/ShippingText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textColor="#000"
        android:id="@+id/TotalText"
        android:textSize="17dp"
        android:layout_below="@+id/line_"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="4,652 EGP"
        android:textColor="@color/MainColor"
        android:textSize="17dp"
        android:id="@+id/Total"
        android:layout_below="@+id/line_"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"


        />

    <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/complete_btn_bg"
            android:text="PROCEED TO PAYMENT"
            android:textColor="#fff"
            android:id="@+id/CompleteOrder"
            android:layout_below="@+id/TotalText"
        android:layout_marginTop="5dp"

            />
</RelativeLayout>

    </RelativeLayout>








    </ScrollView>
</FrameLayout>