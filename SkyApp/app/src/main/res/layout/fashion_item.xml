<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"

    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:layout_optimizationLevel="chains"

    >
    <!--  app:cardElevation="3dp"  is used to show the shadow of the CardView. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:animateLayoutChanges="true"
        android:background="#334BC2D1"
        >

        <ImageView
            android:id="@+id/imageIv3"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="10dp"

            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="16% OFF"
            android:textSize="8dp"
            android:background="#FF0000"
            android:textColor="#fff"
            android:id="@+id/discount2"
            android:textAlignment="center"
            />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/imageIv3">
        <TextView
            android:id="@+id/titleIv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Title"
            android:textColor="#000"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:maxHeight="70dp"

            />

        <TextView
            android:id="@+id/PriceBefore2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleIv3"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Price"
            android:textColor="#a9a9a9"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/PriceAfter3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PriceBefore2"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Price"
            android:textColor="#000"
            android:textSize="12dp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="160dp"
            android:layout_height="30sp"
            android:background="@drawable/addcart_background"
            android:layout_below="@+id/PriceAfter3"
            android:text="Add To Cart"
            android:id="@+id/AddToCart_btn"
            android:textColor="#fff"
            android:drawableLeft="@drawable/ic_add_shopping_cart_black2_24dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="50dp"
android:layout_toLeftOf="@+id/HeartRelative"

            />
    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/PriceAfter3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="4dp"
        android:background="#89FFDFDF"
        android:layout_alignParentRight="true"
        android:id="@+id/HeartRelative"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:src="@drawable/ic_fav_border"

            android:id="@+id/Home_Fav"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</RelativeLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>